<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:text="Medicine Schedule"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:text="Choose Type of Medicine:" />

        <Spinner
            android:id="@+id/Spinner01"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:text="Choose Medication Administration Date:" />

        <DatePicker
            android:id="@+id/datePickerMedication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TimePicker
            android:id="@+id/timePickerMedication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/Dosage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dosage:" />

            <TextView
                android:id="@+id/Delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/Dosage"
                android:text="Method of Delivery:" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/Delivery"
                android:text="Units:" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/editTextDosage"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" >
            </EditText>

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/editTextDosage" />

            <Spinner
                android:id="@+id/spinnerUnits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_toRightOf="@+id/spinner1" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtMsgBoxMed"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_vertical|center_horizontal"
            android:textColor="#FFFFFF" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonAddMedication"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_toRightOf="@+id/back"
                android:layout_marginRight="10dp"
                android:text="Add Medication" />

            <Button
                android:id="@+id/back"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:text="Back" />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>