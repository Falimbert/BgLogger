<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:text="Exercise Schedule"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:text="Choose Type of Exercise:" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:text="Choose Exercise Date:" />

        <DatePicker
            android:id="@+id/datePickerExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_vertical|center_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left|center_vertical"
                android:text="Duration in Hours:" />

            <EditText
                android:id="@+id/editTextHours"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView4"
                android:ems="10"
                android:inputType="number" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration in Minutes:" />

            <EditText
                android:id="@+id/editTextMinutes"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView5"
                android:ems="10"
                android:inputType="number" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtMsgBox"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:textColor="#FFFFFF" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/buttonAddWorkout"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Add Workout" 
                android:layout_marginLeft="20dp"/>

            <Button
                android:id="@+id/back"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/buttonAddWorkout"
                android:text="Back" 
                android:layout_marginRight="20dp"/>
            
        </RelativeLayout>
    </LinearLayout>

</ScrollView>